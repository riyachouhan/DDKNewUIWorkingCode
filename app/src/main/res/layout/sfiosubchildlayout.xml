<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:id="@+id/viewclickdata"
    android:background="@drawable/text_card_bg"
    android:gravity="center"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingLeft="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvtrxnumber"
                android:layout_width="@dimen/_28sdp"
                android:padding="@dimen/_1sdp"
                android:layout_height="@dimen/_28sdp"
                android:textColor="@color/white_color"
                android:gravity="center"
                android:background="@drawable/circle_new_graydark"
                style="@style/hintview"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/black_color"
                    style="@style/myhometext" />

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/green_color"
                    android:text="Send"
                    style="@style/hintview_frozen" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:visibility="gone"
            android:id="@+id/redeemview"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/button_accent_round"
                android:text="Redeem"
                android:textColor="@color/white"
                style="@style/MyCustomTabText_small"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/tvamountsb"
            android:textStyle="bold"
            style="@style/subhintdataSize"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            />

    </LinearLayout>


</LinearLayout>
