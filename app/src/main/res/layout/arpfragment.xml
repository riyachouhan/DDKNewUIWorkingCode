<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainlayout"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:background="@drawable/mapbacksfio"
                android:gravity="bottom"
                android:id="@+id/homeheader"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:paddingRight="@dimen/_16sdp"
                android:layout_gravity="center_vertical"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgprofile"
                    android:layout_width="@dimen/_100sdp"
                    android:padding="@dimen/_1sdp"
                    android:background="@drawable/circle_gray"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/defalut_profile" />

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name_TV"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkShbla"
                        android:text="Rommel Santos"
                        style="@style/hintheadpaysfio"
                        />

                    <TextView
                        android:id="@+id/email_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlackText"
                        android:text="voipdgreat@gmail.com"
                        style="@style/subhintdataSize"
                        />

                    <LinearLayout
                        android:id="@+id/ownershiplay"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/rounded_sfioadd"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/appliedarp"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:textColor="@color/white_color"
                            android:text="Arp blanace "
                            android:gravity="center"
                            style="@style/MyCustomTabText_small"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textColor="@color/darkShbla"
                android:text="ARP Points Summary"
                style="@style/powerbolde"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/texthint"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/text_edit_view_bg_profile"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/profiletabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    app:tabBackground="@drawable/rounded_cornor_button"
                    app:tabGravity="center"
                    android:background="@drawable/text_edit_view_bg_profile"
                    app:tabTextAppearance="@style/MyCustomTabText_small"
                    app:tabMode="fixed"
                    app:tabIndicatorHeight="0dp"
                    app:tabSelectedTextColor="@color/white_color"
                    app:tabTextColor="@color/tab_unSelect" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/layouthistory"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:text="Email Id"
                        android:layout_width="0dp"
                        android:id="@+id/titel_main"
                        android:layout_weight="1.4"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        style="@style/MyCustomTabText_small" />

                    <TextView
                        android:id="@+id/tvmelimun"
                        android:text="Remark"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        style="@style/MyCustomTabText_small"   />

                    <TextView
                        android:id="@+id/percentvalue"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Points"
                        android:textColor="@color/black"
                        style="@style/MyCustomTabText_small" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:id="@+id/layoutdirecet"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:text="Email Id"
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        style="@style/MyCustomTabText_small" />

                    <TextView
                        android:text="Amount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        style="@style/MyCustomTabText_small"   />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Points"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        style="@style/MyCustomTabText_small" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProjectRecycle"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>