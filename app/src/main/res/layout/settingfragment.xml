<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/selection_type_layout"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:padding="@dimen/_7sdp"
            android:background="@drawable/text_card_bg"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/account_layout"
                android:visibility="visible">

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_profile" />

                </LinearLayout>

                <TextView
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:hint="Account"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/secondhintview" />

                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="end|center_vertical"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/colorBlackText"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/texthint"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/banklayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="visible">

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/bankicon" />

                </LinearLayout>

                <TextView
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:hint="Bank"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/secondhintview" />

                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="end|center_vertical"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/colorBlackText"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/texthint"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/emergencyContactlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="visible">

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/emergency_cont" />

                </LinearLayout>

                <TextView
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:hint="Emergency Contact"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/secondhintview" />

                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="end|center_vertical"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/colorBlackText"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/texthint"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/changeEmail"
                android:visibility="visible">

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/email_ac" />

                </LinearLayout>

                <TextView
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:hint="Change Email"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/secondhintview" />

                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="end|center_vertical"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/colorBlackText"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/texthint"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/conatcsupport"
                android:visibility="visible">

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_contract" />

                </LinearLayout>

                <TextView
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:hint="Contact support"
                    android:textColor="@color/colorBlackText"
                    android:textColorHint="@color/colorBlackText"
                    style="@style/secondhintview" />

                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="end|center_vertical"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/colorBlackText"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>